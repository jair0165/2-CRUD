<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar novedad</h4>
            <form method="POST" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                    <textarea type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}"></textarea>
                </div>
                <p>
                    <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                </p>
                <p>
                    <label><input type="checkbox" name="img_delete" value="1"> Eliminar imagen actual ?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>

                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary"> Modificar</button>
            </form>
                {{#if error}}
                 <h5>{{message}}</h5>
                {{/if}} 
        </div>

    </div>
</div>